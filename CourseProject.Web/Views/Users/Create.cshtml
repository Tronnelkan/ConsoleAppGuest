@model CourseProject.Web.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Створення Користувача";
}

<h1 class="mb-4">Створення Користувача</h1>

<form method="post" action="/Users/Create" class="mt-4">
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Login" class="font-weight-bold">Логін</label>
            <input type="text" name="Login" id="Login" class="form-control" placeholder="Введіть логін" />
            <span class="text-danger">@Html.ValidationMessage("Login")</span>
        </div>
        <div class="form-group col-md-6">
            <label for="Email" class="font-weight-bold">Email</label>
            <input type="email" name="Email" id="Email" class="form-control" placeholder="Введіть Email" />
            <span class="text-danger">@Html.ValidationMessage("Email")</span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Password" class="font-weight-bold">Пароль</label>
            <input type="password" name="Password" id="Password" class="form-control" placeholder="Введіть пароль" />
            <span class="text-danger">@Html.ValidationMessage("Password")</span>
        </div>
        <div class="form-group col-md-6">
            <label for="ConfirmPassword" class="font-weight-bold">Підтвердження пароля</label>
            <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" placeholder="Підтвердіть пароль" />
            <span class="text-danger">@Html.ValidationMessage("ConfirmPassword")</span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="FirstName" class="font-weight-bold">Ім'я</label>
            <input type="text" name="FirstName" id="FirstName" class="form-control" placeholder="Введіть ім'я" />
            <span class="text-danger">@Html.ValidationMessage("FirstName")</span>
        </div>
        <div class="form-group col-md-6">
            <label for="LastName" class="font-weight-bold">Прізвище</label>
            <input type="text" name="LastName" id="LastName" class="form-control" placeholder="Введіть прізвище" />
            <span class="text-danger">@Html.ValidationMessage("LastName")</span>
        </div>
    </div>

    <div class="form-group">
        <label for="Gender" class="font-weight-bold">Стать</label>
        <select name="Gender" id="Gender" class="form-control">
            <option value="">Оберіть стать</option>
            <option value="Male">Чоловіча</option>
            <option value="Female">Жіноча</option>
            <option value="Other">Інша</option>
        </select>
        <span class="text-danger">@Html.ValidationMessage("Gender")</span>
    </div>

    <div class="form-group">
        <label for="RecoveryKeyword" class="font-weight-bold">Recovery Keyword</label>
        <input type="text" name="RecoveryKeyword" id="RecoveryKeyword" class="form-control" placeholder="Введіть Recovery Keyword" />
        <span class="text-danger">@Html.ValidationMessage("RecoveryKeyword")</span>
    </div>

    <div class="form-group">
        <label for="Phone" class="font-weight-bold">Телефон</label>
        <input type="tel" name="Phone" id="Phone" class="form-control" placeholder="+380XXXXXXXXX" />
        <span class="text-danger">@Html.ValidationMessage("Phone")</span>
    </div>

    <div class="form-group">
        <label for="Address" class="font-weight-bold">Адреса</label>
        <input type="text" name="Address" id="Address" class="form-control" placeholder="Вулиця, Місто, Країна" />
        <span class="text-danger">@Html.ValidationMessage("Address")</span>
    </div>

    <div class="form-group">
        <label for="BankCardData" class="font-weight-bold">Дані банківської картки</label>
        <input type="text" name="BankCardData" id="BankCardData" class="form-control" placeholder="XXXX-XXXX-XXXX-XXXX" />
        <span class="text-danger">@Html.ValidationMessage("BankCardData")</span>
    </div>

    <button type="submit" class="btn btn-primary">Створити</button>
    <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">Скасувати</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
