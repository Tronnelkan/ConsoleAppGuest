@model IEnumerable<CourseProject.Web.Models.UserViewModel>

@{
    ViewData["Title"] = "Користувачі";
}

<h1>Користувачі</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Створити Нового Користувача</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Логін</th>
            <th>Ім'я</th>
            <th>Прізвище</th>
            <th>Email</th>
            <th>Телефон</th>
            <th>Роль</th>
            <th>Адреса</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Login</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.RoleName</td>
                <td>@user.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-warning">Редагувати</a>
                    <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-sm btn-info">Деталі</a>
                    <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
