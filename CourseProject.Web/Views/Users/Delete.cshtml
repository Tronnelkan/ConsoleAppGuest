@model CourseProject.Web.Models.UserViewModel

@{
    ViewData["Title"] = "Видалити Користувача";
}

<h1>Видалити Користувача</h1>

<h3>Ви впевнені, що хочете видалити цього користувача?</h3>
<div>
    <h4>Користувач</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Логін
        </dt>
        <dd class="col-sm-10">
            @Model.Login
        </dd>
        <dt class="col-sm-2">
            Ім'я
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Прізвище
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Телефон
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>
        <dt class="col-sm-2">
            Роль
        </dt>
        <dd class="col-sm-10">
            @Model.RoleName
        </dd>
        <dt class="col-sm-2">
            Адреса
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </form>
</div>
