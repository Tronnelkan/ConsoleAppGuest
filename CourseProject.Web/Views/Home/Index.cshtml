@{
    ViewData["Title"] = "Головна";
}

<h1>Ласкаво просимо до CourseProject!</h1>
<p>@ViewData["Message"]</p>

@if (User.Identity.IsAuthenticated)
{
    <a href="@Url.Action("Index", "Users")" class="btn btn-primary">Перейти до списку користувачів</a>
    <form asp-action="Logout" asp-controller="Account" method="post" style="display:inline;">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Вийти</button>
    </form>
}
else
{
    <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Увійти</a>
    <a href="@Url.Action("Register", "Account")" class="btn btn-secondary">Реєстрація</a>
}
