@model CourseProject.Web.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Відновлення пароля";
}

<h1 class="mb-4">Відновлення пароля</h1>

<form asp-action="ForgotPassword" method="post" class="mt-4">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Email" class="font-weight-bold"></label>
        <input asp-for="Email" class="form-control" type="email" placeholder="Введіть ваш Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RecoveryKeyword" class="font-weight-bold"></label>
        <input asp-for="RecoveryKeyword" class="form-control" placeholder="Введіть Recovery Keyword" />
        <span asp-validation-for="RecoveryKeyword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="font-weight-bold"></label>
        <input asp-for="NewPassword" class="form-control" type="password" placeholder="Введіть новий пароль" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="font-weight-bold"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Підтвердіть новий пароль" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Скинути пароль</button>
    <a href="@Url.Action("Login", "Account")" class="btn btn-link">Повернутися до логіну</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
