@model CourseProject.Web.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Логін";
}

<h1 class="mb-4">Логін</h1>

<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <input name="Login" type="text" class="form-control" placeholder="Введіть логін" />
    <input name="Password" type="password" class="form-control" placeholder="Введіть пароль" />
    <input type="checkbox" name="RememberMe" id="RememberMe" class="form-check-input" value="true" />
    <input type="hidden" name="RememberMe" value="false" />
    <label for="RememberMe" class="form-check-label">Запам'ятати мене</label>

    <button type="submit">Увійти</button>
</form>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
