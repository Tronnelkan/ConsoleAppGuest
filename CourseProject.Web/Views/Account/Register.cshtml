@model CourseProject.Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Реєстрація";
}

<h1 class="mb-4">Реєстрація</h1>

<form method="post" action="/Account/Register" class="mt-4">
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Login" class="font-weight-bold">Логін</label>
            <input name="Login" id="Login" class="form-control" placeholder="Введіть логін" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="Email" class="font-weight-bold">Email</label>
            <input name="Email" id="Email" class="form-control" type="email" placeholder="Введіть Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Password" class="font-weight-bold">Пароль</label>
            <input name="Password" id="Password" class="form-control" type="password" placeholder="Введіть пароль" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="ConfirmPassword" class="font-weight-bold">Підтвердження пароля</label>
            <input name="ConfirmPassword" id="ConfirmPassword" class="form-control" type="password" placeholder="Підтвердіть пароль" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="FirstName" class="font-weight-bold">Ім'я</label>
            <input name="FirstName" id="FirstName" class="form-control" placeholder="Введіть ім'я" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="LastName" class="font-weight-bold">Прізвище</label>
            <input name="LastName" id="LastName" class="form-control" placeholder="Введіть прізвище" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label for="Gender" class="font-weight-bold">Стать</label>
        <select name="Gender" id="Gender" class="form-control">
            <option value="">Оберіть стать</option>
            <option value="Male">Чоловіча</option>
            <option value="Female">Жіноча</option>
            <option value="Other">Інша</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="RecoveryKeyword" class="font-weight-bold">Recovery Keyword</label>
        <input name="RecoveryKeyword" id="RecoveryKeyword" class="form-control" placeholder="Введіть Recovery Keyword" />
        <span asp-validation-for="RecoveryKeyword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Phone" class="font-weight-bold">Телефон</label>
        <input name="Phone" id="Phone" class="form-control" type="tel" placeholder="+380XXXXXXXXX" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Address" class="font-weight-bold">Адреса</label>
        <input name="Address" id="Address" class="form-control" placeholder="Вулиця, Місто, Країна" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="BankCardData" class="font-weight-bold">Дані банківської картки</label>
        <input name="BankCardData" id="BankCardData" class="form-control" placeholder="XXXX-XXXX-XXXX-XXXX" />
        <span asp-validation-for="BankCardData" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зареєструватися</button>
    <a href="/Account/Login" class="btn btn-link">Вже маєте акаунт? Увійдіть</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
