<Window x:Class="GuestWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Головне Вікно" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Змінити Пароль" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    Command="{Binding ChangePasswordCommand}" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" Margin="0,0,0,10"/>
            <Button Content="Керувати Користувачами" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    Command="{Binding ManageUsersCommand}" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
