<Window x:Class="GuestWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <!-- Поле для логіну -->
            <TextBlock Text="Логін:" />
            <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <!-- Поле для пароля -->
            <TextBlock Text="Пароль:" Margin="0,10,0,0" />
            <PasswordBox Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" />

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Ввійти" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding LoginCommand}" Width="100" Margin="5,0"/>
                <Button Content="Зареєструватись" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding RegisterCommand}" Width="120" Margin="5,0"/>
                <Button Content="Забули пароль?" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding ForgotPasswordCommand}" Width="120" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
