<Window x:Class="WpfApp.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизація" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логін" Margin="5"/>
            <TextBox Width="200" Margin="5" Text="{Binding Login}" />
            <TextBlock Text="Пароль" Margin="5"/>
            <PasswordBox Width="200" Margin="5" Password="{Binding Password}" />
            <Button Content="Увійти" Command="{Binding LoginCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
