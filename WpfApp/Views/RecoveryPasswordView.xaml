<Window x:Class="WpfApp.Views.RecoveryPasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recover Password" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <!-- Username -->
            <TextBox Tag="Username" Text="{Binding Username}" Margin="0,10" />

            <!-- Recovery Keyword -->
            <TextBox Tag="Recovery Keyword" Text="{Binding RecoveryKeyword}" Margin="0,10" />

            <!-- New Password -->
            <PasswordBox x:Name="NewPasswordBox" Margin="0,10" PasswordChanged="OnPasswordChanged" />

            <!-- Reset Button -->
            <Button Content="Reset Password" Command="{Binding ResetPasswordCommand}" Width="150" Margin="0,10" />

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
