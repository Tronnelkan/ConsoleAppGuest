<Window x:Class="WpfApp.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Page" Height="400" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Welcome!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>

            <Button Content="Register" Command="{Binding OpenRegisterCommand}" Width="200" Margin="0,10" Click="Button_Click"/>
            <Button Content="Login" Command="{Binding OpenLoginCommand}" Width="200" Margin="0,10"/>
            <Button Content="Recover Password" Command="{Binding OpenRecoveryCommand}" Width="200" Margin="0,10"/>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
